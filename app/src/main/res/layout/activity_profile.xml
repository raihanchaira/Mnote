<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            tools:context=".ui.profile.ProfileActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="690dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="107dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_profile"/>

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_medium"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    tools:text="Faozan Sudrajat"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_medium"
                    android:textSize="14sp"
                    android:textColor="@color/greyMnote"
                    tools:text="fs5zan"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:text="Name"
                    />

                <EditText
                    android:id="@+id/ed_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="20dp"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_marginTop="8dp"
                    tools:hint="Faozan Sudrajat"
                    android:background="@drawable/bg_et_profile"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/dmsans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="Username"
                    />

                <EditText
                    android:id="@+id/ed_profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="20dp"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_marginTop="8dp"
                    tools:hint="Faozan Sudrajat"
                    android:background="@drawable/bg_et_profile"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/dmsans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="Email address"
                    />

                <EditText
                    android:id="@+id/ed_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="20dp"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_marginTop="8dp"
                    tools:hint="Faozan Sudrajat"
                    android:background="@drawable/bg_et_profile"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/dmsans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="Phone Number"
                    />

                <EditText
                    android:id="@+id/ed_profile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="20dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:layout_marginTop="8dp"
                    tools:hint="Faozan Sudrajat"
                    android:background="@drawable/bg_et_profile"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/dmsans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="Password"
                    />

                <EditText
                    android:id="@+id/ed_profile_pass"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingStart="20dp"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:layout_marginTop="8dp"
                    tools:hint="Faozan Sudrajat"
                    android:background="@drawable/bg_et_profile"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_update"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Update"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/dmsans_medium"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_addorder"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
