<androidx.cardview.widget.CardView
    android:id="@+id/dialog_add_order"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bt_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Order"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/greyMnote"
            android:fontFamily="@font/dmsans_bold"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Item Name"
                android:textSize="11.34sp"
                android:labelFor="@+id/ed_item_name"
                android:textColor="@color/greyMnote"
                android:fontFamily="@font/dmsans_regular"/>

            <EditText
                android:id="@+id/ed_item_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:paddingStart="16dp"
                android:singleLine="true"
                android:paddingEnd="4dp"
                android:background="@drawable/bg_editext_addorder"
                android:elevation="1dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:layout_marginBottom="10dp"
                android:textSize="11.34sp"
                android:labelFor="@id/ed_amount"
                android:textColor="@color/greyMnote"
                android:fontFamily="@font/dmsans_regular"/>

            <EditText
                android:id="@+id/ed_amount"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="40dp"
                android:paddingStart="16dp"
                android:singleLine="true"
                android:inputType="number"
                android:paddingEnd="4dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_editext_addorder"
                android:elevation="1dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_add"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:text="Add"
                android:textSize="10sp"
                android:fontFamily="@font/dmsans_medium"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_addorder"/>

            </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>