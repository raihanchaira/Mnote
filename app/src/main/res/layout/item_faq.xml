<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card1"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="98dp"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    card_view:cardCornerRadius="8dp"
    card_view:layout_constraintEnd_toEndOf="parent"
    card_view:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="98dp"
        android:padding="16dp">


        <TextView
            android:id="@+id/tv_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="How to login?"
            android:fontFamily="@font/dmsans_bold"
            android:textSize="15sp"
            tools:textColor="@color/greyMnote"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            />

        <View
            android:id="@+id/line"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            card_view:layout_constraintTop_toBottomOf="@id/tv_tittle"
            card_view:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_field"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:layout_height="29dp"
            tools:text="sat set sat set"
            android:fontFamily="@font/dmsans_regular"
            android:textSize="10sp"
            android:textColor="@color/greyMnote"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/line"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
